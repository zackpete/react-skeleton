{
  "name": "react-skeleton",
  "version": "1.0.0",
  "description": "Skeleton React project.",
  "author": "Zack Peterson",
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run _css && npm run _dist",
    "format": "npm run _prettier -- --write",
    "generate": "npm run _css && npm run format",
    "serve": "npx webpack serve --port 8000 --mode development",
    "test": "npm run _prettier -- --check",
    "_css": "npx tailwind build src/style.src.css -o src/style.css",
    "_dist": "npx webpack --mode production --config webpack.config.js",
    "_prettier": "npx prettier 'src/**/*.{css,scss,js,jsx,ts,tsx}'"
  },
  "devDependencies": {
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/react-router-dom": "5.1.7",
    "autoprefixer": "10.2.1",
    "awesome-typescript-loader": "5.2.1",
    "connect-livereload": "0.6.1",
    "css-loader": "5.0.1",
    "express": "4.17.1",
    "html-webpack-plugin": "4.5.1",
    "livereload": "0.9.1",
    "postcss": "8.2.4",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router-dom": "5.2.0",
    "style-loader": "2.0.0",
    "tailwindcss": "2.0.2",
    "typescript": "4.1.3",
    "webpack": "5.15.0",
    "webpack-cli": "4.3.1",
    "webpack-dev-server": "3.11.2"
  }
}
