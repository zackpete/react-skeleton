{
  "name": "react-skeleton",
  "version": "1.0.0",
  "description": "Skeleton project for React with Typescript",
  "author": "Zack Peterson",
  "license": "MIT",
  "scripts": {
    "build": "npm run _css && npm run _dist",
    "format": "npm run _prettier -- --write",
    "generate": "npm run _css && npm run format",
    "serve": "npx webpack-dev-server --mode development",
    "test": "npm run _prettier -- --check",
    "_css": "npx tailwind build src/stylesheet/tailwind.src.css -c tailwind.js -o src/stylesheet/style.css",
    "_dist": "npx webpack --mode production",
    "_prettier": "npx prettier 'src/**/*.{css,scss,js,jsx,ts,tsx}'"
  },
  "devDependencies": {
    "@types/react": "16.8.13",
    "@types/react-dom": "16.8.4",
    "@types/react-router-dom": "4.3.2",
    "awesome-typescript-loader": "5.2.1",
    "css-loader": "2.1.1",
    "html-webpack-plugin": "3.2.0",
    "prettier": "1.17.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-router-dom": "5.0.0",
    "style-loader": "0.23.1",
    "tailwindcss": "0.7.4",
    "typescript": "3.3.4000",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.0",
    "webpack-dev-server": "3.3.1"
  }
}
