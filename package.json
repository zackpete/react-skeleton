{
  "name": "noahs-ark",
  "version": "1.0.0",
  "description": "Website for Noah's Ark Preschool",
  "author": "Zack Peterson",
  "license": "UNLICENSED",
  "scripts": {
    "build": "npm run _css && npm run _dist",
    "format": "npm run _prettier -- --write",
    "generate": "npm run _css && npm run format",
    "serve": "npx webpack-dev-server --port 8000 --mode development",
    "test": "npm run _prettier -- --check",
    "_css": "npx tailwind build src/css/style.src.css -o src/css/style.css",
    "_dist": "npx webpack --mode production",
    "_prettier": "npx prettier 'src/**/*.{css,scss,js,jsx,ts,tsx}'"
  },
  "devDependencies": {
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-router-dom": "4.3.5",
    "awesome-typescript-loader": "5.2.1",
    "connect-livereload": "0.6.1",
    "css-loader": "3.2.0",
    "express": "4.17.1",
    "html-webpack-plugin": "3.2.0",
    "livereload": "0.8.0",
    "prettier": "1.18.2",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-router-dom": "5.0.1",
    "style-loader": "1.0.0",
    "tailwindcss": "1.1.2",
    "typescript": "3.6.2",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.7",
    "webpack-dev-server": "3.8.0"
  }
}
